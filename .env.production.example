# =============================================================================
# PRODUÇÃO - Variáveis de Ambiente
# =============================================================================
# Copie este arquivo para .env.production e preencha com valores reais
# NUNCA commite o arquivo .env.production no Git!
# =============================================================================

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public&pgbouncer=true&connection_limit=1"

# =============================================================================
# CRON JOBS - Sistema de Pagamento Automático
# =============================================================================
# Use uma secret key forte gerada com: openssl rand -base64 32
CRON_SECRET="sua-secret-key-segura-para-cron-jobs-producao"

# =============================================================================
# INSTAGRAM API
# =============================================================================
INSTAGRAM_APP_ID="seu-app-id-producao"
INSTAGRAM_APP_SECRET="seu-app-secret-producao"
INSTAGRAM_REDIRECT_URI="https://seu-dominio.com/api/instagram/callback"

# =============================================================================
# FIREBASE CLIENT (Variáveis Públicas)
# =============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY="sua-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="seu-projeto.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="seu-projeto-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="seu-projeto.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="seu-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="seu-app-id"

# =============================================================================
# FIREBASE ADMIN (Variáveis Privadas - NUNCA exponha no cliente!)
# =============================================================================
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@seu-projeto.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA\n-----END PRIVATE KEY-----"

# =============================================================================
# STORAGE (S3/R2 Compatible)
# =============================================================================
USE_S3="true"
STORAGE_REGION="auto"
STORAGE_ACCESS_KEY_ID="sua-access-key"
STORAGE_SECRET_ACCESS_KEY="sua-secret-key"
STORAGE_BUCKET="seu-bucket-producao"
STORAGE_ENDPOINT="https://seu-endpoint.r2.cloudflarestorage.com"

# =============================================================================
# EMAIL (Resend)
# =============================================================================
RESEND_API_KEY="re_sua_api_key_producao"
EMAIL_FROM="Sistema <noreply@seu-dominio.com>"

# =============================================================================
# SENTRY (Monitoramento de Erros)
# =============================================================================
SENTRY_DSN="https://your-dsn@sentry.io/project-id"
SENTRY_ORG="sua-organizacao"
SENTRY_PROJECT="seu-projeto"
SENTRY_AUTH_TOKEN="seu-auth-token"

# =============================================================================
# NEXT.JS
# =============================================================================
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://seu-dominio.com"

# =============================================================================
# RATE LIMITING (Upstash Redis)
# =============================================================================
UPSTASH_REDIS_REST_URL="https://seu-endpoint.upstash.io"
UPSTASH_REDIS_REST_TOKEN="seu-token"

# =============================================================================
# ANALYTICS (PostHog)
# =============================================================================
NEXT_PUBLIC_POSTHOG_KEY="phc_seu_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"
